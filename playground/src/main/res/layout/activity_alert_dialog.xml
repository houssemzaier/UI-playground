<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_alertDialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bravedroid.playground.notifications.AlertDialogActivity">

    <Button
        android:id="@+id/buttonSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_success"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonWarning"
        app:layout_constraintEnd_toStartOf="@+id/buttonWarning"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonWarning"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/buttonWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/alert_dialog_warning"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonError"
        app:layout_constraintStart_toEndOf="@+id/buttonSuccess"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/buttonError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_error"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonWarning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonWarning"
        app:layout_constraintTop_toTopOf="@+id/buttonWarning"
        tools:ignore="ButtonStyle" />
</androidx.constraintlayout.widget.ConstraintLayout>
