<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_snackbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_default_element"
    tools:background="@color/color_snackbar_neutral_background">

    <TextView
        android:id="@+id/textView_snackbar_textBody"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.88"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="@dimen/textSize_layoutSnackbar_textBody_16sp"
        android:textStyle="bold"
        tools:text="@string/dummy_text_small"
        tools:textColor="@color/color_snackbar_text_body_text" />

    <ImageView
        android:id="@+id/imageView_snackbar_iconCancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.12"
        android:padding="@dimen/padding_layoutSnackbar_iconCancel_8dp"
        android:src="@drawable/icon_snackbar_cancel"
        tools:ignore="ContentDescription" />
</LinearLayout>
